<Page x:Class="DatabaseClient.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DatabaseClient.Pages"
      mc:Ignorable="d"
      Title="UsersPage"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <Button Margin="5,5,5,5" Click="CreateUserButtonClick" Height="30">Create new User</Button>
            <Button Margin="5,5,5,5" Click="DeleteUserButtonClick" Height="30">Delete selected user</Button>
            <Button Margin="5,5,5,5" Click="RefreshButtonClick" Height="30">Refresh</Button>
        </StackPanel>
        <DataGrid Name="UserDataGrid" Grid.Column="1" ItemsSource="{Binding Users}" AutoGeneratedColumns="UserDataGrid_OnAutoGeneratedColumns" CellEditEnding="UserDataGrid_OnCellEditEnding">
        </DataGrid>
    </Grid>
</Page>
